    let btn4 = document.querySelector('#btn4')
    let btn5 = document.querySelector('#btn5')
    let btn6 = document.querySelector('#btn6')
    let btn7 = document.querySelector('#btn7')
    let btn8 = document.querySelector('#btn8')
    let btn9 = document.querySelector('#btn9')

    let section1 = document.querySelector('#section1')
    let section2 = document.querySelector('#section2')
    let section3 = document.querySelector('#section3')
    let section4 = document.querySelector('#section4')
    let section5 = document.querySelector('#section5')
    let section6 = document.querySelector('#section6')
    let section7 = document.querySelector('#section7')
    let section8 = document.querySelector('#section8')
    let section9 = document.querySelector('#section9')


    for (const container of containers) {
        let i = container.querySelector('i')
        container.addEventListener('mouseenter', () => {
            removeClass(i, 'fa-plus')
            addClass(i, 'fa-angle-down')
            i.classList.add('text-primary')
        })
        container.addEventListener('mouseleave', () => {
            i.classList.remove('fa-plus')
            i.classList.add('fa-plus')
            i.classList.remove('text-primary')
        })
    }

    let handleSelection = (btn, section) => {

        let isBtnPressed = false;

        btn.addEventListener('click', () => {
            if (!isBtnPressed) {
                section.classList.toggle('hidden')
                isBtnPressed = !isBtnPressed
            }
            isBtnPressed = !isBtnPressed
        })
    }
    let removeClass = (element, className) => {
        element.classList.remove(`${className}`)
    }
    let addClass = (element, className) => {
        element.classList.add(`${className}`)
    }

    handleSelection(btn1, section1)
    handleSelection(btn2, section2)
    handleSelection(btn3, section3)
    handleSelection(btn4, section4)
    handleSelection(btn5, section5)
    handleSelection(btn6, section6)
    handleSelection(btn7, section7)
    handleSelection(btn8, section8)
    handleSelection(btn9, section9)
</script>