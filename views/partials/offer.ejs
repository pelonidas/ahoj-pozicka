<section class="flex" id="home-card-section">
    <div class="offer-bg-l"></div>
    <div class="flex flex-col container mx-auto">
        <div class="flex mb-7">
            <div class="w-1/2">
                <h2 class="text-6xl mb-8">Čo ponúkame </h2>
                <p class="text-sm leading-loose">
                    Bestpôžička vám pomôže získať peniaze jednoducho a rýchlo, účel použitia je už na vás! Naliehavé
                    opravy?
                    Nákup domáceho spotrebiča? Kúpa nového vozidla? Máte na výber! Žiadosť o pôžičku nebola nikdy
                    jednoduchšia.
                </p>
            </div>
            <div class="rounded drop-shadow-lg bg-white py-10 px-14 w-1/2 ml-10" id="pozicky">
                <a href="/">
                    <div class="flex items-center">
                        <img src="/images/cash-bag.svg" alt="" class="mr-12">
                        <div>
                            <h3 class="text-3xl mb-4">Pôžičky</h3>
                            <p class="text-sm leading-normal">
                                Pôžička s pravidelnými splátkam od 400€ do 15000€. Pôžička nie je viazaná na žiadny
                                účel,
                                peniaze
                                môžete použiť na čokoľvek. Vybavenie a vedenie pôžičky je úplne zadarmo.
                            </p>
                        </div>
                        <div class="hidden" id="yellow-arrow">
                            <i class="fa-solid fa-chevron-right"></i>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="flex">
            <div class="rounded drop-shadow-lg bg-white w-1/2 flex items-center py-6 px-14 hover:cursor-pointer mr-10" id="dofinancovanie">
                <a href="/dofinancovanie">
                    <div class="flex items-center">
                        <img src="/images/house-icon.svg" alt="" class="mr-12">
                        <div>
                            <h3 class="text-3xl mb-4">Dofinancovanie hypotéky</h3>
                            <p class="text-sm leading-normal">
                                Pôžička na dofinancovanie hypotéky je riešenie ako dofinancovať klasickú hypotéku na
                                kúpu
                                nehnuteľnosti. Maximálna výška pôžičky na dofinancovanie hypotéky je 30 000€.
                            </p>
                        </div>
                        <div class="hidden" id="red-arrow">
                            <i class="fa-solid fa-chevron-right"></i>
                        </div>
                    </div>
                </a>
            </div>
            <div class="rounded drop-shadow-lg bg-white ml-auto flex items-center w-1/2 py-6 px-14 hover:cursor-pointer "
                 id="refinancovanie">
                <a href="/refinancovanie">
                    <div class="flex items-center">
                        <img src="/images/loop-icon.svg" alt="" class="mr-12">
                        <div>
                            <h3 class="text-3xl mb-4">Refinancovanie</h3>
                            <p class="text-sm leading-normal">
                                Refinancovanie vám pomôže zbaviť sa starých dlhov a získať hotovosť navyše až do výšky
                                10
                                000 € , je
                                už len na vás na aké dlhé obdobie si refinančný úver nastavíte.
                            </p>
                        </div>
                        <div class="hidden" id="orange-arrow">
                            <i class="fa-solid fa-chevron-right"></i>
                        </div>
                    </div>
                </a>
            </div>
        </div>

    </div>
    <div class="offer-bg-r"></div>
</section>
<script>
    let refinancovanie = document.querySelector('#refinancovanie')
    let dofinancovanie = document.querySelector('#dofinancovanie')
    let pozicky = document.querySelector('#pozicky')

    let refArrow = document.querySelector('#orange-arrow')
    let dofArrow = document.querySelector('#red-arrow')
    let pozickyArrow = document.querySelector('#yellow-arrow')

    refinancovanie.addEventListener('mouseenter', () => {
        refArrow.className = "offer-hover-orange"
        refinancovanie.classList.remove('py-6')
        refinancovanie.classList.remove('px-14')
        refinancovanie.classList.add('pl-14')
    })
    refinancovanie.addEventListener('mouseleave', () => {
        refArrow.className = "hidden"
        refinancovanie.classList.add('py-6')
        refinancovanie.classList.add('px-14')
    })

    dofinancovanie.addEventListener('mouseenter', () => {
        dofArrow.className = "offer-hover-red"
        dofinancovanie.classList.remove('py-6')
        dofinancovanie.classList.remove('px-14')
        dofinancovanie.classList.add('pl-14')
    })
    dofinancovanie.addEventListener('mouseleave', () => {
        dofArrow.className = "hidden"
        dofinancovanie.classList.add('py-6')
        dofinancovanie.classList.add('px-14')
    })

    pozicky.addEventListener('mouseenter', () => {
        pozickyArrow.className = "offer-hover-yellow"
        pozicky.classList.remove('py-10')
        pozicky.classList.remove('px-14')
        pozicky.classList.add('pl-14')
    })
    pozicky.addEventListener('mouseleave', () => {
        pozickyArrow.className = "hidden"
        pozicky.classList.add('py-10')
        pozicky.classList.add('px-14')
    })

</script>
