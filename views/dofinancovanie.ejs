<section id="dofinancovanie-form" class="flex">
    <div id="form-left"></div>
    <div id="form-content" class="container flex justify-between items-center">
        <div id="dofinancovanie-person-form" class="border border-black w-1/2">
            <h2 class="text-5xl w-2/3 mb-12">Požiadajte o ponuku</h2>
            <h3 class="text-3xl mb-3">Adrián Kudláč</h3>
            <p class="w-1/2">Zodpovený za poskytovanie dofinancovania hypoték</p>
            <div class="flex items-center mt-2">
                <img src="/images/contact-call.svg" alt="" class="w-8">
                <span class="ml-5 text-xl">+421 918 709 028</span>
            </div>
        </div>
        <div class="w-1/2 bg-white drop-shadow-lg rounded-l-lg flex items-center" id="contact-form">
            <div class="w-full px-10 py-16">
                <form action="">
                    <div class="mb-7">
                        <label for="name">Meno a priezvisko</label>
                        <input type="text" id="name" placeholder="Juraj Testulic"
                               class="rounded-lg py-2 px-4 border-2 border-secondary block w-full">
                    </div>
                    <div class="mb-7">
                        <label for="email">Email</label>
                        <input type="text" id="email" placeholder="juraj.testulic@gmail.com"
                               class="rounded-lg py-2 px-4 border-2 border-secondary block w-full">
                    </div>
                    <div class="mb-7">
                        <label for="email">Mam zaujem o:</label>
                        <input type="text" id="email" value="Dofinancovanie Hypotéky"
                               class="rounded-lg py-2 px-4 border-2 border-secondary block w-full">
                    </div>
                    <div class="mb-12">
                        <label for="message">Sprava</label>
                        <textarea name="" id="message" class="w-full py-2 px-4 border-2 border-secondary rounded-lg"
                                  placeholder="Dobry den,"></textarea>
                    </div>
                    <div class="flex justify-center">
                        <button class="bg-dRed text-white px-14 py-2.5 rounded-md">Odoslat</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div id="form-right"></div>
</section>

