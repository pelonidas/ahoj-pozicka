<script>
    let radio = document.getElementById("otherIncome");
    let sideIncome = document.querySelector('#sideIncome');
    let checked;

    radio.addEventListener('click', () => {
        sideIncome.classList.toggle('hide');

        if (checked === radio) {
            radio.checked = false;
            checked = null;
        } else {
            checked = radio;
        }
    })
</script>

