<% layout('./layouts/boilerplate') %>
<div class="bg-secondary h-full mb-[7rem] md:mb-0">
    <section class="bg-secondary" id="centrala-top">
        <div class="mx-auto w-full max-w-[92%] md:max-w-[75%] pt-16 md:mb-56 pb-[3.5rem]">
            <div class="flex flex-col md:grid md:grid-cols-7 text-white md:pb-24">
                <div class="col-span-3">
                    <div class="mb-8">
                        <div class="md:w-2/3 mb-6">
                            <h2 class="text-[2.3rem] md:text-5xl leading-tight md:leading-normal">Kontaktujte tím <span class="text-primary">Bestpôžička</span></h2>
                        </div>
                        <div class="md:w-5/6">
                            <p class="font-light text-[1rem]">
                                Porozprávať sa s nami môžete počas otváracích hodín v pracovné dni. Mimo otváracích hodín nás kontaktujte
                                prostredníctvom nižšie uvedeného formulára. Uveďte čo najviac podrobností. Pokúsime sa vás kontaktovať hneď v nasledujúci pracovný deň.
                            </p>
                        </div>
                    </div>
                    <div id="centrala-top-bg1"></div>
                </div>
                <div class="col-span-4">
                    <div id="centrala-top-bg2" class="flex items-center">
                        <div>
                            <img src="/images/contact-placeholder.png" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<section id="contact-section-map" class="text-secondary">
    <div class="flex flex-col md:grid grid-cols-2">
        <div class="md:grid grid-cols-7 bg-secondary md:py-16 rounded-b-lg md:rounded-r-lg">
            <div class="col-span-1 " id="contact-map"></div>
            <div class="col-span-6 mx-auto w-full max-w-[92%] md:max-w-full md:mx-0 pb-[2rem] md:pb-0">
                <img src="/images/contact-map.png" alt="" class="md:w-2/3 md:ml-auto md:mr-16">
            </div>
        </div>
        <div class="md:grid grid-cols-4 order-first md:order-last bg-secondary md:bg-white text-white md:text-secondary">
            <div class="col-span-3 flex flex-col justify-center md:ml-10 py-[2.5rem]">
                <h2 class="text-center md:text-left text-[2.5rem] md:text-5xl mb-[1rem] md:mb-3 font-medium">Kontaktujte nás</h2>
                <h3 class="text-[1.5rem] text-center md:text-left md:text-3xl">Pre viac informácií</h3>
                <div class="flex items-center mt-[2rem] md:mt-10 mx-auto md:mx-0 w-2/3 md:w-full">
                    <img src="/images/contact-call.svg" alt="" class="w-8 bg-white">
                    <span class="ml-4 md:ml-7 text-[1.25rem] md:text-xl font-bold">+421 918 709 028</span>
                </div>
                <div class="flex items-center mt-5 mx-auto w-2/3 md:mx-0 md:w-full">
                    <img src="/images/contact-mail.svg" alt="" class="bg-white w-8">
                    <span class="ml-4 md:ml-7 text-[1.25rem] md:text-xl font-bold">info@bestpozicky.sk</span>
                </div>
                <div class="flex items-center mt-5 mx-auto md:mx-0 w-2/3 md:w-full ">
                    <img src="/images/contact-location.svg" alt="" class="w-8">
                    <span class="ml-4 md:ml-7 text-[1.25rem] md:text-xl font-bold">Fejova 1, 040 01 Kosice</span>
                </div>
                <div class="flex mt-[2rem] md:mt-10">
                    <a href="" class="border-2 border-dRed rounded-lg h-[45px] w-[192px] flex justify-center items-center text-[18px] font-bold mx-auto md:mx-0">
                        <span>Centrála</span>
                    </a>
                </div>

            </div>
            <div class="md:col-span-1" id="contact-right"></div>
        </div>
    </div>
</section>
<div class="mb-28">
    <%- include('./partials/personal')%>
</div>

<%- include('./partials/contactForm')%>
