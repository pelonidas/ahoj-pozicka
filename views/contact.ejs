<% layout('./layouts/boilerplate') %>
<div class="bg-secondary h-full mb-[7rem] md:mb-0">
    <section class="bg-secondary" id="centrala-top">
        <div class="mx-auto w-full max-w-[92%] lg:max-w-[1620px] pt-16 lg:mb-56 lg:pb-[3.5rem]">
            <div class="flex flex-col md:grid md:grid-cols-7 text-white md:pb-24">
                <div class="col-span-3">
                    <div class="mb-8">
                        <div class="md:w-2/3 mb-6">
                            <h2 class="text-[2.3rem] md:text-5xl leading-tight md:leading-normal">Kontaktujte tím <span class="text-primary">Bestpôžička</span></h2>
                        </div>
                        <div class="md:w-5/6">
                            <p class="font-light text-[1rem]">
                                Porozprávať sa s nami môžete počas otváracích hodín v pracovné dni. Mimo otváracích hodín nás kontaktujte
                                prostredníctvom nižšie uvedeného formulára. Uveďte čo najviac podrobností. Pokúsime sa vás kontaktovať hneď v nasledujúci pracovný deň.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-span-4">
                    <div class="flex items-center">
                        <div class="ml-auto">
                            <img src="/images/contact-placeholder.png" alt="" class="w-full lg:max-w-[880px]">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<section class="container md:grid grid-cols-2 border lg:mb-[7rem] gap-24">
    <div class="border">
        <img src="/images/kontakt-kontaktujte/map.png" alt="" class="w-full max-w-[666px]">
    </div>
    <div class="border my-auto">
        <h2 class="text-[2.5rem] text-center md:text-left leading-[44px] font-medium lg:text-[4rem] lg:leading-[72px] mb-[1rem] md:mb-0">Kontaktujte nás</h2>
        <h3 class="text-[1.75rem] lg:text-[2.5rem] text-center md:text-left lg:leading-[44px]">Pre viac informácií</h3>
        <div class="flex items-center mt-[2rem] lg:mt-10 w-[73%] mx-auto md:w-full md:mx-0">
            <img src="/images/contact-call.svg" alt="" class="w-8 md:w-10">
            <span class="ml-4 md:ml-7 text-[1.25rem] md:text-[1.75rem] font-bold">+421 918 709 028</span>
        </div>
        <div class="flex items-center mt-[1rem] lg:mt-5 w-[73%] mx-auto md:w-full md:mx-0">
            <img src="/images/contact-mail.svg" alt="" class="w-8 md:w-10">
            <span class="ml-4 md:ml-7 text-[1.25rem] md:text-[1.75rem] font-bold">info@bestpozicky.sk</span>
        </div>
        <div class="flex items-center mt-[1rem] lg:mt-5 w-[73%] mx-auto md:w-full md:mx-0 mb-[1rem] md:mb-0">
            <img src="/images/contact-location.svg" alt="" class="w-8 md:w-10">
            <span class="ml-4 md:ml-7 text-[1.25rem] md:text-[1.75rem] font-bold">Fejova 1, 040 01 Košice</span>
        </div>
    </div>
</section>
