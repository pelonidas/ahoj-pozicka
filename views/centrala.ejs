<% layout('./layouts/boilerplate') %>
<section class="bg-secondary text-white py-20">
    <div class="w-full lg:max-w-[1620px] mx-auto flex flex-col md:grid grid-cols-5">
        <div class="col-span-2" id="centrala-hero-text">
            <div class="md:w-2/3 mb-[4rem]">
                <h4 class="text-[1.25rem] md:text-[1.75rem] mb-6 font-light">Sídlime v <span class="text-primary">lokalite:</span>
                </h4>
                <h2 class="text-[2.3rem] md:text-[4rem] leading-none mb-5">Finančný dom <span
                            class="text-primary font-bold">Košice</span></h2>
                <p class="text-[1rem] font-light leading-tight md:leading-normal">Ak preferujete osobný kontakt, pre Vás
                    všetkých je tu naša centrála v
                    Košiciach.</p>
            </div>
        </div>
        <div class="w-full col-span-3">
            <div class="relative md:max-w-[1000px] md:py-24" id="centrala-hero-video">
                <img src="/images/centrala-top-img.png" alt="" class="md:max-w-[89%] ml-auto mr-[10%]">
            </div>
        </div>
    </div>
</section>
<section class="container lg:my-28 flex border lg:justify-between">
    <div class="flex flex-col w-full lg:max-w-[325px] my-auto lg:ml-[5rem]">
        <h2 class="lg:text-[4rem] font-medium">Centrála</h2>
        <p class="font-text lg:leading-[28px] lg:text-[1.25rem] mr-5">
            Nadštandardná forma starostlivosti. Náš tím expertov je vám k dispozícii <span class="font-bold">v pracovné dni od 8:00 do 17:00.</span>
            Poskytneme Vám kompletný servis od žiadosti o pôžičku až po jej schválenie. Čo je pre nás dôležité? Spokojný
            zákazníci!
        </p>
    </div>
    <img src="/images/centrala-gallery/img1.png" alt="">
    <img src="/images/centrala-gallery/img2.png" alt="">
</section>
<section class="w-full lg:max-w-[1920px] lg:h-[650px] lg:bg-[url('/images/centrala-mapa/map.png')] mx-auto flex">
    <div class="bg-white rounded-[10px] w-full lg:max-w-[840px] lg:h-[400px] m-auto lg:mr-[5rem] flex lg:flex-col justify-center lg:pl-[4rem]">
        <h2 class="lg:text-[4rem] font-medium lg:leading-[72px]">Navštívte nás</h2>
        <h3 class="lg:text-[2.5rem] lg:leading-[44px] lg:mb-10">Pre viac informácií</h3>
        <div class="flex font-bold lg:text-[1.5rem] lg:mb-6">
            <img src="/images/icons/location.svg" alt="">
            <span class="ml-5">Fejova 1, 040 01 Košice</span>
        </div>
        <div class="flex font-bold lg:text-[1.5rem]">
            <img src="/images/icons/clock.svg" alt="">
            <span class="ml-5">Pondelok - Piatok, 8:00 - 17:00</span>
        </div>
    </div>
</section>


<%- include('./partials/personal') %>
<section id="centrala-contact">
    <div class="w-full max-w-[92%] md:max-w-[75%] flex flex-col md:grid md:grid-cols-5 bg-white mx-auto px-6 py-16 md:py-0 md:px-0 md:p-24 rounded-[10px] drop-shadow-xl">
        <div class="md:col-span-2">
            <h2 class="text-[2.25rem] md:text-6xl mb-[1rem] md:mb-4 font-medium text-center md:text-left">Kontaktujte
                nás</h2>
            <p class="w-2/3 md:w-full mx-auto text-[1.5rem] text-center md:text-left">V pracovné dni od 8:00 do
                17:00</p>
        </div>
        <div class="col-span-2 mx-auto">
            <div class="flex items-center mt-10">
                <img src="/images/contact-call.svg" alt="" class="w-8">
                <span class="ml-5 md:ml-7 text-[1.25rem] font-bold">+421 918 709 028</span>
            </div>
            <div class="flex items-center mt-5">
                <img src="/images/contact-mail.svg" alt="" class="w-8">
                <span class="ml-5 md:ml-7 text-[1.25rem] font-bold">info@bestpozicky.sk</span>
            </div>
            <div class="flex items-center mt-5">
                <img src="/images/contact-location.svg" alt="" class="w-8">
                <span class="ml-5 md:ml-7 text-[1.25rem] font-bold">Fejova 1, 040 01 Košice</span>
            </div>
        </div>
        <div class="col-span-1" id="contact-right"></div>
    </div>
</section>